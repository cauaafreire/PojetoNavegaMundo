<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NavegaMundo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NavegaMundo.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/navegamundologo.png" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Produto" asp-action="ProcurarLocais">Procurar Locais</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="Login">Administração</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="footer-navega">
        <div class="footer-container">
            <div class="footer-col brand">
                <h3>Navega<br>Mundo</h3>
                <p>Mais que viagens, memórias inesquecíveis</p>

                <div class="footer-social">
                    <a href="https://www.instagram.com/navegamundo_/">
                        <img src="~/img/icons8-instagram-logo-50.png" alt="Instagram">
                    </a>
                    <a href="https://www.linkedin.com/in/navega-mundo-8812413a0/">
                        <img src="~/img/icons8-linkedin-50.png" alt="LinkedIn" />
                    </a>
                </div>
            </div>

            <div class="footer-col">
                
            </div>

            <div class="footer-col">
                <h4>Localização</h4>
                <p>
                    Av. Paulista 726 - Bela Vista<br />
                    São Paulo - SP, 01310-200
                </p>
            </div>
        </div>

        <div class="footer-bottom">
            © 2025 NavegaMundo — Todos os direitos reservados.
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
