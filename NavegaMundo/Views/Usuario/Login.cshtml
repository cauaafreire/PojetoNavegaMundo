@model NavegaMundo.Models.Usuario;


<link href="~/css/login.css" rel="stylesheet" />

<h1 class="login-title">Login</h1>

<form asp-controller="Usuario" asp-action="Login" method="post" class="login-form">
    <div class="form-group">
        <input type="email" name="Email" required class="form-control" placeholder="Email" />
    </div>
    <div class="form-group">
        <input type="password" name="Senha" required class="form-control" placeholder="Senha" />
    </div>
    <button type="submit" class="btn btn-primary login-btn">Entrar</button>
</form>
